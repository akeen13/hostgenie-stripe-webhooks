# Stripe API Secret Key (sk_live_... or sk_test_...)
STRIPE_SECRET_KEY=your_stripe_secret_key

# Stripe Webhook Signing Secret (whsec_...)
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_signing_secret

# Supabase Project URL
SUPABASE_URL=your_supabase_project_url

# Supabase Service Role Key (for backend operations)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Stripe Price IDs (used by getInternalTierFromPriceId helper)
STRIPE_PRICE_BASIC=price_xxxxxxxxxxxxxx_basic
STRIPE_PRICE_PREMIUM=price_xxxxxxxxxxxxxx_premium
STRIPE_PRICE_MULTILINGUAL=price_xxxxxxxxxxxxxx_multilingual # or _CONNECTED
# STRIPE_PRICE_FREE is not strictly needed here if it's $0 and handled as default

# Port for the Express server (Railway will inject PORT, this is for local dev)
PORT=3003